<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentregistry.controllers.MainController">
   <children>
      <MenuBar>
        <menus>
            <Menu mnemonicParsing="false" text="New">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#openNewStudent" text="Student" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Manage">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#importStudentsCSV" text="Import students (CSV)" />
                  <MenuItem mnemonicParsing="false" onAction="#importStudentsExcel" text="Import students (Excel)" />
                  <MenuItem mnemonicParsing="false" onAction="#exportStudentsCSV" text="Export students (CSV)" />
                  <MenuItem mnemonicParsing="false" onAction="#exportStudentsExcel" text="Export students (Excel)" />
                  <MenuItem mnemonicParsing="false" text="Export Table" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
      <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="First Name">
               <cellValueFactory>
                  <PropertyValueFactory property="firstName" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn text="Last Name">
               <cellValueFactory>
                  <PropertyValueFactory property="lastName" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn text="Course">
               <cellValueFactory>
                  <PropertyValueFactory property="course" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn text="Group">
               <cellValueFactory>
                  <PropertyValueFactory property="group" />
               </cellValueFactory>
            </TableColumn>
        </columns>
        <contextMenu>
            <ContextMenu>
                  <items>
                     <MenuItem fx:id="tableContextUpdate" onAction="#openUpdateStudent" text="Update" />
                     <MenuItem fx:id="tableContextDelete" onAction="#deleteStudent" text="Delete" />
                  </items>
            </ContextMenu>
         </contextMenu>
      </TableView>
   </children>
</VBox>
