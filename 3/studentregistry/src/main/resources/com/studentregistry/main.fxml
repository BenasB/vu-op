<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentregistry.controllers.MainController">
   <children>
      <MenuBar>
        <menus>
            <Menu mnemonicParsing="false" text="New">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#openNewStudent" text="Student" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Manage">
               <items>
                  <MenuItem mnemonicParsing="false" text="Import students" />
                  <MenuItem mnemonicParsing="false" text="Export students" />
                  <MenuItem mnemonicParsing="false" text="Export Table" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </children>
</VBox>
